{
  "name": "myerscode/utilities-bags",
  "description": "A PHP helper utility class for fluent interaction and manipulation with collection data using immutable bags",
  "keywords": [
    "arrays",
    "objects",
    "collections",
    "dot array",
    "dot accessor",
    "array helper",
    "chaining",
    "fluent",
    "utility",
    "library",
    "idempotent"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "myerscode",
      "email": "team@myerscode.com",
      "homepage": "https://myerscode.com"
    },
    {
      "name": "Fred Myerscough",
      "email": "fred@myerscough.co.uk",
      "homepage": "https://fredmyerscough.co.uk"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Myerscode\\Utilities\\Bags\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "vendor/bin/phpunit --testdox --no-coverage --colors=always",
    "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --testdox --colors=always",
    "lint-fix": "vendor/bin/php-cs-fixer fix"
  }
}
